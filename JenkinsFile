pipeline {
    agent any

    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "JAVA_HOME=/usr/lib/jvm/java-1.8.0-openjdk-amd64 mvn clean install"
            }
            post {
                success {
                    archiveArtifacts artifacts: 'target/AbyssChatColor.jar'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}